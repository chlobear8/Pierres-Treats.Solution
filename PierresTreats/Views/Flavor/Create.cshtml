@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h1>Add a new flavor</h1>

@using (@Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {required = "required"})

  <input type = "submit" value = "Add a new flavor" class = "btn btn-primary" />
}

<p>@Html.ActionLink("Show all flavors", "Index")</p>